<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<h2 class="welcome">Welcome <%= locals.accountData.account_firstname %></h2>

<a href="/account/update-account">Update Account Information</a>


<% if (locals.accountData) {
    const accountType = locals.accountData.account_type; 
    if (accountType === 'Admin' || accountType === 'Employee') { %>
        <h3 class="welcome_h3">Inventory Management</h3>
        <p class="welcome_p"><a href="/inv/">link here</a></p>
    <% }
} %>